<!doctype html>
<html lang="es">


  <body>
    <main class="container-fluid">
    

        <!-- Cuerpo principal -->
        <section class="row">
          <article class="col-12  card">
            <div class="card-body">
              <h2 class="display-4 text-white bg-info text-center pt-2">Actualizar un Producto</h2>
            </div>
          </article>
        </section>

        <section class="bg-home pt-4">
          <div class="container">
            <div class="row">
              <div class="col-8 mx-auto bg-light ">
                <div class="create-form">
                  <form action="/admin/edit/<%= productEdit.id%>?_method=PUT
                            " method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                      <input type="text" class="form-control" name="name" placeholder="Nombre" required="required"
                        value="<%= productEdit.name%>">
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="description" placeholder="Descripción"
                        required="required" value="<%= productEdit.description%>">
                    </div>
                    <div class="form-group">
                      <input type="number" class="form-control" name="price" placeholder="Indique el precio"
                        required="required" value="<%= productEdit.price%>">
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="tallas" placeholder="Tallas" required="required"
                        value="<%= productEdit.tallas%>">
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="colores" placeholder="Colores" required="required"
                        value="<%= productEdit.colores%>">
                    </div>
                    <div class="form-group">
                      <input type="number" class="form-control" name="existencia" placeholder="Indique la existencia"
                        required="required" value="<%= productEdit.existencia%>">
                    </div>
                    <div class="form-group">
                      <select name="category" class="custom-select" id="validationCategory" required>
                        <option disabled value="#">Seleccione la categoría"</option>
                        <option value="Formal" <%=productEdit.category=='Formal' ? "selected" : null %>
                          >FORMAL</option>
                        <option value="Sport" <%=productEdit.category=='Sport' ? "selected" : null %>>SPORT</option>
                        <option value="Casual" <%=productEdit.category=='Casual' ? "selected" : null %>>CASSUAL
                        </option>
                      </select>
                    </div>
                    <div class="form-group">
                      <select name="descuento" class="custom-select" id="validationCustom04" required>
                        <option disabled value="#">Seleccione un descuento"</option>
                        <option value="0" <%=productEdit.descuento==0 ? "selected" : null %>
                          >Sin descuento</option>
                        <option value="15" <%=productEdit.descuento==15 ? "selected" : null %>>15%</option>
                        <option value="30" <%=productEdit.descuento==30 ? "selected" : null %>>30%</option>
                      </select>
                    </div>
                    <!--Aquí solicito la imagen-->
                    <div class="custom-file">
                      <figure class="form-group">
                        <img class="w-100" src="/images/<%= productEdit.image%>" width="500px"
                          alt="product <%= productEdit.name%>">
                      </figure>
                      <input type="hidden" name="oldImage" value="<%= productEdit.image%>">
                      <!--De esta forma logro conservar y que viaje la image anterior de esta forma evito que el usuario seleccione una image nuevamente, ( si no lo desea) -->
                      <input type="file" name="image">
                      <!--<input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" name="image" required value=""> 

                                    <label class="custom-file-label" for="inputGroupFile01">Seleccione una image...</label>-->
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn btn-info">Actualizar</button>
                      <a href="/administrar" class="btn btn-danger">Volver</a>
                    </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
    </main>
  </body>

</html>