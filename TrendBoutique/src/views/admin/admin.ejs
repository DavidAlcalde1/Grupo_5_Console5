<!doctype html>
<html lang="es">
  <link rel="stylesheet" type="text/css" href="/css/stylesshome.css">
  <link rel="stylesheet" type="text/css" href="/css/stylesHeader.css">
  <link rel="stylesheet" type="text/css" href="/css/stylesFooter.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <script
  src="https://kit.fontawesome.com/2c7738e51c.js"
  crossorigin="anonymous"
></script>
  <%- include('../partials/header.ejs') %>    
<body>
  <!-- <form action=""></form> -->
    <main class="container-fluid">
      
      <!--Administrador de productos-->
      <br>
      <section class="row">
        <article class="col-12 ">
          <h2 class="display-4 text-primary text-center pt-2">Administrador de Productos</h2>
        </article>
        <article class="col-12">
          <a href="../admin/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
        </article>
        <article class="col-12" >
        <table class=" table ">
            <thead class="text-white bg-primary">
              <tr>  
                <th scope="col"></th>
                <th scope="col">Nombre</th>
                <th scope="col">Talla</th>
                <th scope="col">Color</th>
                <th scope="col">Precio</th>
                <th scope="col">Descuento</th>
                <th scope="col">Stock</th>
                <th scope="col">Ver</th>
                <th scope="col">Editar</th>
                <th scope="col" id="trashButton">Borrar</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
              <tr>
                <td><img src="/images/<%= product.image%>" style="width: 50px; height: 50px;"></td>
                <td style="vertical-align: middle;"><%= product.name%></td>
                <td style="vertical-align: middle;"><%= product.size%> </td>
                <td style="vertical-align: middle;"><%= product.color%> </td>
                <td style="vertical-align: middle;"><%= product.price%> </td>
                <td style="vertical-align: middle;"><%= product.descuento%> </td>
                <td style="vertical-align: middle;"><%= product.quantity%> </td>
                <td style="vertical-align: middle;"><a href="../products/detail/<%= product.id%> "> <ion-icon name="eye-outline"></ion-icon></a></td>
                <td style="vertical-align: middle;"><a href="../admin/edit/<%= product.id%> "> <ion-icon name="pencil-outline"></ion-icon></a></td>
                <td style="vertical-align: middle;"><a href="../admin/delete/<%= product.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
              </tr>
              <% }); %>
            </tbody>
          </table> 
        </article>       
      </section>
      <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
    </main>
  </body>
 
</html>