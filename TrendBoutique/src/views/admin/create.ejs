<!DOCTYPE html>
<html>
<head>
    <title>Crear Producto</title>
    <link rel="stylesheet" href="/css/stylesCreate.css">
</head>
<body>
    <h1>Crear Producto</h1>

    <form action="/admin/create" method="POST" enctype="multipart/form-data" >
        <main class="main">
            <div class="column1">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" required><br><br>

                <label for="description">Descripción:</label>
                <input type="text" id="description" name="description" required><br><br>

                <label for="price">Precio:</label>
                <input type="number" id="price" name="price" required><br><br>

                <label for="quantity">Cantidad:</label>
                <input type="number" id="quantity" name="quantity" required>

                <label for="descuento">Descuento:</label>
                <input type="number" id="descuento" name="descuento" required>                
            </div>

            <div class="column2">                
                <label for="size">Talla:</label>
                <input type="text" id="size" name="size" required><br><br>

                <label for="color">Color:</label>
                <input type="text" id="color" name="color" required><br><br>
            </div>

            <div>
                <label for="idcategory">Categoría:</label>
                <select id="idcategory" name="idcategory">
                    <option value="1">Formal</option>
                    <option value="2">Casual</option>
                    <option value="3">Sport</option>
                </select>
                <br><br>

                <label for="image">Imagen:</label>
                <input type="file" id="image" name="image" accept="image/*">
                <!--<input type="text" id="image" name="image" value="" required hidden>-->
            </div>
        </main>
        <div>
            <button type="submit" id="crear">Crear Producto</button>
            <button type="delete" id="eliminar">Eliminar Producto</button>
        </div>
    </form>  
</body>
</html>

<script>
    document.getElementById('imageSelect').onchange = function () {
        document.getElementById('image').value = document.getElementById('imageSelect').files[0].name;
    }
   </script>