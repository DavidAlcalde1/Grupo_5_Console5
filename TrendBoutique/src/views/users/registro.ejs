<!DOCTYPE html>
<html>

<head>

  <title>Registro</title>

  <link rel="stylesheet" type="text/css" href="/css/stylesRegistro.css">
  <link rel="stylesheet" type="text/css" href="/css/stylesHeader.css">
  <link rel="stylesheet" type="text/css" href="/css/stylesFooter.css">
  <link rel="stylesheet" type="text/css" href="/css/stylesValidators.css">
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />


</head>

<body>
  <!-- ERRORES FRONT -->
  <div class="errores">
    <ul></ul>
  </div>
  <main>
    <% if(typeof(errors) !='undefined' ){%>
      <ul class="alert alert-danger">
        <% errors.forEach(error=> { %>
          <li>
            <%= error.msg%>
          </li>
          <%});%>
      </ul>
      <%}%>


        <!-- FORMULARIO -->
        <form class="registro" id="registroForm" action='/register' method="post" enctype="multipart/form-data">
          <h1 class="title">Registrate</h1>
          <input type="text" placeholder="Nombre" name="first_name" id="nombre"><br>
          <!-- <span id="msgNombre" class="msg"></span><br> -->
          <input type="text" placeholder="Apellido" name="last_name" id="apellido"><br>
          <!-- <span id="msgApellido" class="msg"></span><br> -->
          <input type="text" placeholder="correo electrónico" name="email" id="correo"><br>
          <!-- <span id="msgEmail" class="msg"></span><br> -->
          <input type="number" placeholder="Teléfono" name="telefono" id="telefono"><br>
          <!-- <span id="msgTelefono" class="msg"></span><br> -->
          <input type="password" placeholder="Contraseña" name="password" id="contrasena"><br>
          <!-- <span id="msgPassword" class="msg"></span><br> -->
          <input type="text" placeholder="Ocupación" name="role" id="role"><br>
          <!-- <span id="msgOcupacion" class="msg"></span><br> -->
          <input type="text" placeholder="Ciudad" name="country" id="ciudad"><br>
          <label for="fechaNacimiento">Fecha de nacimiento:</label>
          <input type="date" name="fechaNacimiento" id="fechaNacimiento"><br>
          <h3>sexo</h3>
          <div class="caja">
            <div class="contenedor">
              <input type="radio" id="hombre" name="gender" value="hombre">
              <label for="hombre">hombre</label>
            </div>
            <div class="contenedor">
              <input type="radio" id="mujer" name="gender" value="mujer">
              <label for="mujer">mujer</label>
            </div>
            <div class="contenedor">
              <input type="radio" id="personalizado" name="gender" value="personalizado">
              <label for="personalizado">personalizado</label>
            </div>
          </div><br>
          <label for="image">Imagen:</label>
          <input type="file" id="image" name="image" accept="image/*">
          <button type="submit">Registrarse</button>
        </form>
        <script src="script.js"></script>
        <div>
          <% //- include('../partials/footer.ejs') %>
        </div>

      </main>
      <script src="/js/registerValidators.js"></script>
</body>

</html>