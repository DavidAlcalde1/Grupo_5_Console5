    <div class="listProducts">
      <!-- <h1 id="titulo">Detalle de Producto</h1> -->
      
      <h1 class="tituloD">Detalle de Producto</h1>
     
      <ul class="producto">
        <li class="detalle">
          <img
            class="imageList"
            src="/images/<%= miProducto.image %>"
            alt="Mi Imagen"
            width="600px"
            height="600px"
          />
          <section class="contenedor">
            <h4>Nombre del Producto: <%= miProducto.name %></h4>
            <h4>Descripción: <%= miProducto.description %></h4>
            <h4>Precio: $<%= miProducto.price %></h4>
            <h4>Disponibilidad: <%= miProducto.quantity %></h4>
            <h4>Categoría: <%= miProducto.idcategory %></h4>
            <h4>Talla: <%= miProducto.size %></h4>
            <h4>Color: <%= miProducto.color %></h4>
          </section>
        </li>
      </ul>
    </div>
  </body>
  <%- include('../partials/footer.ejs') %>
