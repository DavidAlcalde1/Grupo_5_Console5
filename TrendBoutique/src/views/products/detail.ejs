  <%- include('../partials/header.ejs') %>
  <body>
    <div class="contenedorWa">
      <a
        class="btnWa"
        tarjet="_blank"
        onclick="gtag_report_conversion_wa();"
        href="https://api.whatsapp.com/send?phone=51946559236&text=Estoy%20interesado%20en%20sus%20productos."
